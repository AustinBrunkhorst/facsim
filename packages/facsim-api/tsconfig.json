{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2016",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "/node_modules/"
  ],
  "include": [
    "src/**/*.ts"
  ]
}